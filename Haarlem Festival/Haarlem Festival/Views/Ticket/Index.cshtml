@model IEnumerable<Haarlem_Festival.Models.Domain_Models.General.Ticket>

@{
    ViewBag.Title = "Tickets";
}

<head>
    @Styles.Render("~/Content/Tickets/TicketStyle.css")
</head>

<section class="title">
    <span>---------------------------------------------------</span>
    <h1>Tickets</h1>
    <span>---------------------------------------------------</span>
</section>

<section id="ticketSection">
    <table class="table">
        <tr class="row">
            <th> Selected Event </th>
            <th> Price </th>
            <th> Amount </th>
        </tr>
        @foreach (var ticket in Model)
        {
            <tr class="row">
                <td> @ticket.Event.EventName - @ticket.Event.StartTime </td>
                <td> €@ticket.Price,- </td>
                <td> @ticket.Amount </td>
            </tr>
        }
    </table>
</section>